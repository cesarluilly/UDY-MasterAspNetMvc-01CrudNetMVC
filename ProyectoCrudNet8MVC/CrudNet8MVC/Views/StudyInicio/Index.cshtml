@*                                                          //Directivas son las que empiezan con un @ seguida
    //                                                      //    una palabra clave -> @model, @using *@
@model IEnumerable<CrudNet8MVC.Models.Contacto>
@{
    //                                                      //Bloques de codigo razor.
    ViewData["Title"] = "Lista de Contactos";
}

<hi class="text-center">Contacto con .NET 8 (NET CORE MVC)</hi>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-controller="StudyInicio" asp-action="Crear" class=" btn btn-secondary mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
        </a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Usuarioss</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @*                                      //Se especifica hasta arriba el modelo
                                                            //    que recibe la vista, en este caso
                                                            //    se le asigna una lista.
                     *@
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    @*//                    //Cuando utilizamos el arroba @, estamos
                                      //                    //    utilizando expresion de codigo, como @if, @for, etc
                                    *@
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Celular)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                        <td>
                                            @*//            //La siguiente parte de codigo no es necesario
                                              //            //    ponerlo, ya que al querer hacer referencia 
                                              //            //    a un metodo de este controlador, esto es
                                              //            //    redundante.
                                              //            //    asp-controller="StudyInicio"
                                              //            //Lo pongo namas para ver que si podemos tambien
                                              //            //    irnos a otro action de otro controlador.
                                            *@
                                            <a class="btn btn-warning" asp-controller="StudyInicio" asp-action="Editar" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
                                            <a class="btn btn-secondary" asp-controller="StudyInicio" asp-action="Detalle" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalle</a>
                                            <a class="btn btn-danger" asp-controller="StudyInicio" asp-action="Editar" asp-route-id="@item.Id"><i class="fa fa-eraser" aria-hidden="true"></i> Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        <p>No hay registro</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>








