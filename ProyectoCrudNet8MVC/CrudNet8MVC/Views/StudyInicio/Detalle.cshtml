@*                                                          //Directivas son las que empiezan con un @ seguida
    //                                                      //    una palabra clave -> @model, @using *@
@model CrudNet8MVC.Models.Contacto
@{
    //                                                      //Bloques de codigo razor.
    ViewData["Title"] = "Detalle Contacto";
}


<hi class="text-center">Contacto con .NET 8 (NET CORE MVC)</hi>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Usuario</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre:</strong>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><strong>Telefono:</strong>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><strong>Celular:</strong>@Html.DisplayFor(m => m.Celular)</li>
                    <li class="list-group-item"><strong>Email:</strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Fecha:</strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                </ul>

                <a asp-controller="StudyInicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>